<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_task_list">

    <fragment
        android:id="@+id/nav_task_list"
        android:name="com.issen.workerfinder.ui.taskList.TaskListFragment"
        android:label="@string/menu_task_list"
        tools:layout="@layout/fragment_task_list">
        <action
            android:id="@+id/action_nav_home_to_nav_new_task"
            app:destination="@id/nav_new_task" />
        <action
            android:id="@+id/action_nav_task_list_to_nav_task_detail"
            app:destination="@id/nav_task_detail" />
        <action
            android:id="@+id/action_nav_task_list_to_nav_user_profile"
            app:destination="@id/nav_user_profile" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.issen.workerfinder.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/nav_contact"
        android:name="com.issen.workerfinder.ui.contactWithAdmin.ContactWithAdminFragment"
        android:label="@string/menu_contact"
        tools:layout="@layout/fragment_contact_with_admin" />
    <fragment
        android:id="@+id/nav_info"
        android:name="com.issen.workerfinder.ui.info.InfoFragment"
        android:label="@string/menu_info"
        tools:layout="@layout/fragment_info" />
    <fragment
        android:id="@+id/nav_new_task"
        android:name="com.issen.workerfinder.ui.taskCreate.TaskCreateFragment"
        android:label="@string/menu_newTask"
        tools:layout="@layout/fragment_task_create">
        <action
            android:id="@+id/action_nav_new_task_to_nav_task_list"
            app:destination="@id/nav_task_list"
            app:popUpTo="@id/nav_task_list"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_contact_add"
        android:name="com.issen.workerfinder.ui.contactAdd.ContactAddFragment"
        android:label="@string/menu_contact_add"
        tools:layout="@layout/fragment_contact_add">
        <action
            android:id="@+id/action_nav_contact_add_to_nav_user_profile"
            app:destination="@id/nav_user_profile" />
    </fragment>
    <fragment
        android:id="@+id/nav_contact_list"
        android:name="com.issen.workerfinder.ui.contactList.ContactListFragment"
        android:label="@string/menu_contact_list"
        tools:layout="@layout/fragment_contact_list">
        <action
            android:id="@+id/action_nav_contact_list_to_nav_user_profile"
            app:destination="@id/nav_user_profile" />
    </fragment>
    <fragment
        android:id="@+id/nav_task_detail"
        android:name="com.issen.workerfinder.ui.taskDetail.TaskDetailFragment"
        android:label="@string/menu_taskDetail"
        tools:layout="@layout/fragment_task_detail">
        <argument
            android:name="fullTask"
            app:argType="com.issen.workerfinder.database.models.TaskModelFull" />
        <action
            android:id="@+id/action_nav_task_detail_to_task_edit_fragment"
            app:destination="@id/task_edit_fragment" />
        <action
            android:id="@+id/action_nav_task_detail_to_nav_user_profile"
            app:destination="@id/nav_user_profile" />
    </fragment>
    <fragment
        android:id="@+id/task_edit_fragment"
        android:name="com.issen.workerfinder.ui.taskEdit.TaskEditFragment"
        android:label="@string/menu_taskEdit"
        tools:layout="@layout/fragment_task_edit" >
        <argument
            android:name="fullTask"
            app:argType="com.issen.workerfinder.database.models.TaskModelFull" />
    </fragment>
    <fragment
        android:id="@+id/nav_user_profile"
        android:name="com.issen.workerfinder.ui.userProfile.UserProfileFragment"
        android:label="@string/menu_userProfile"
        tools:layout="@layout/fragment_user_profile">
        <argument
            android:name="userDataFull"
            app:argType="com.issen.workerfinder.database.models.UserDataFull" />
        <action
            android:id="@+id/action_nav_user_profile_to_nav_user_profile_edit"
            app:destination="@id/nav_user_profile_edit" />
    </fragment>
    <fragment
        android:id="@+id/nav_user_profile_edit"
        android:name="com.issen.workerfinder.ui.userProfile.UserProfileEditFragment"
        android:label="@string/menu_userProfileEdit"
        tools:layout="@layout/fragment_user_profile_edit">
        <argument
            android:name="userDataFull"
            app:argType="com.issen.workerfinder.database.models.UserDataFull" />
    </fragment>
    <fragment
        android:id="@+id/nav_task_board"
        android:name="com.issen.workerfinder.ui.taskBoard.TaskBoardFragment"
        android:label="@string/menu_task_board"
        tools:layout="@layout/fragment_task_board">
        <action
            android:id="@+id/action_nav_task_board_to_nav_task_detail"
            app:destination="@id/nav_task_detail" />
    </fragment>
    <fragment
        android:id="@+id/nav_contact_board"
        android:name="com.issen.workerfinder.ui.contactBoard.ContactBoardFragment"
        android:label="@string/menu_contact_board"
        tools:layout="@layout/fragment_contact_board">
        <action
            android:id="@+id/action_nav_contact_board_to_nav_user_profile"
            app:destination="@id/nav_user_profile" />
    </fragment>
    <fragment
        android:id="@+id/nav_dashboard"
        android:name="com.issen.workerfinder.ui.dashboard.DashboardFragment"
        android:label="@string/menu_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/nav_contact_chat"
        android:name="com.issen.workerfinder.ui.contactChat.ContactChatFragment"
        android:label="@string/menu_contact_chat"
        tools:layout="@layout/fragment_contact_chat"/>
    <fragment
        android:id="@+id/nav_invitations"
        android:name="com.issen.workerfinder.ui.invitations.InvitationFragment"
        android:label="@string/menu_invitations"
        tools:layout="@layout/fragment_invitation">
        <action
            android:id="@+id/action_nav_invitations_to_nav_user_profile"
            app:destination="@id/nav_user_profile" />
        <action
            android:id="@+id/action_nav_invitations_to_nav_task_detail"
            app:destination="@id/nav_task_detail" />
    </fragment>

</navigation>