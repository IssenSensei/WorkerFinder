<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.issen.workerfinder.enums.DashboardNotificationTypes" />

        <variable
            name="notificationData"
            type="com.issen.workerfinder.database.models.DashboardNotificationFull" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:orientation="vertical">

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/colorAccent" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/new_task_smallest_black"
                app:tint="@color/colorAccent" />

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/colorAccent" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:layout_weight="9"
            app:cardCornerRadius="@dimen/spacing_large"
            app:cardElevation="@dimen/spacing_small">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/item_notification_work_user_photo"
                    photo="@{notificationData.userData.photo}"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/spacing_medium"
                    app:civ_border="false"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_notification_work_text"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    notificationWorkText="@{notificationData}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:gravity="start"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_notification_work_user_photo"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/item_notification_work_accept"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:background="@drawable/btn_rounded_transparent"
                    android:drawableStart="@drawable/ic_done"
                    android:drawableTint="@color/green_600"
                    android:shadowRadius="3"
                    android:text="Przyjmij"
                    android:visibility="@{notificationData.notification.dashboardNotificationType.equals(DashboardNotificationTypes.WORKOFFERED.toString()) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/item_notification_work_refuse"
                    app:layout_constraintStart_toEndOf="@id/item_notification_work_user_photo" />

                <Button
                    android:id="@+id/item_notification_work_refuse"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:background="@drawable/btn_rounded_transparent"
                    android:drawableStart="@drawable/clear_smallest_black"
                    android:drawableTint="@color/red_600"
                    android:shadowRadius="3"
                    android:text="OdrzuÄ‡"
                    android:visibility="@{notificationData.notification.dashboardNotificationType.equals(DashboardNotificationTypes.WORKOFFERED.toString()) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_notification_work_accept"
                    app:layout_constraintTop_toBottomOf="@id/item_notification_work_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>