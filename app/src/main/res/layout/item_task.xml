<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="task"
            type="com.example.workerfinder.database.TaskModel" />

        <variable
            name="clickListener"
            type="com.example.workerfinder.ui.home.TaskListListener" />
    </data>

    <com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/lyt_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedblock">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/is_cyclic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:contentDescription="@string/description_is_cyclic"
                    android:visibility="gone"
                    app:srcCompat="@drawable/cyclic_smallest_black"
                    app:tint="@color/colorSecondary" />

                <ImageView
                    android:id="@+id/has_pictures"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:contentDescription="@string/description_has_pictures"
                    android:visibility="gone"
                    app:srcCompat="@drawable/camera_smallest_black"
                    app:tint="@color/colorSecondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_large">

                <CheckBox
                    android:id="@+id/task_complete_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> clickListener.onTaskComplete(task)}"
                    android:buttonTint="@color/colorSecondary" />

                <TextView
                    android:id="@+id/task_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:onClick="@{() -> clickListener.onItemHold(task)}"
                    android:layout_weight="7"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_10"
                    tools:text="TytuÅ‚" />

                <ImageView
                    android:id="@+id/task_expand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:contentDescription="@string/description_task_more"
                    android:visibility="gone"
                    app:srcCompat="@drawable/down_smallest_black"
                    app:tint="@color/colorSecondary" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/task_priority"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:contentDescription="@string/description_task_more"
                    app:srcCompat="@drawable/priority_smallest_black"
                    app:tint="@color/grey_3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_list_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/task_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium"
                    android:textColor="@color/grey_10" />

                <LinearLayout
                    android:id="@+id/task_list_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</layout>
