<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="com.issen.workerfinder.database.models.UserData" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_small"
        android:background="@drawable/roundedblock"
        app:cardCornerRadius="@dimen/spacing_x_small"
        app:cardElevation="@dimen/spacing_medium">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/dialog_rating_user_photo"
                photo="@{user.photo}"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="@dimen/spacing_medium"
                app:civ_border="false"
                app:civ_shadow="true"
                app:civ_shadow_radius="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dialog_rating_user_name"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:text="@{user.userName}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/dialog_rating_user_photo"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/dialog_rating_rating"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="5"
                android:progressTint="@color/yellow_800"
                android:secondaryProgressTint="@android:color/transparent"
                android:stepSize="0.1"
                app:layout_constraintBottom_toBottomOf="@id/dialog_rating_user_photo"
                app:layout_constraintStart_toStartOf="@id/dialog_rating_user_name"
                app:layout_constraintTop_toBottomOf="@id/dialog_rating_user_name" />

            <EditText
                android:id="@+id/dialog_rating_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:inputType="textMultiLine"
                android:hint="@string/comment_hint"
                app:layout_constraintEnd_toEndOf="@id/dialog_rating_user_name"
                app:layout_constraintStart_toStartOf="@id/dialog_rating_user_photo"
                app:layout_constraintTop_toBottomOf="@id/dialog_rating_user_photo" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>