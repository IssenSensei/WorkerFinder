<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="drawerFilterClickListener"
            type="com.issen.workerfinder.ui.misc.OnCustomizeDrawerListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/spacing_small">

        <LinearLayout
            android:id="@+id/drawer_filter_main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/drawer_filter_toggle_filter_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:gravity="center_vertical"
                        android:minHeight="?attr/actionBarSize"
                        android:onClick="@{(view) -> drawerFilterClickListener.onMainHeaderClicked(view)}"
                        android:orientation="horizontal"
                        android:tag="filter">

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/filter_label"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_80" />

                        <ImageButton
                            android:id="@+id/drawer_filter_toggle_filter_button"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="false"
                            android:tag="viewButton"
                            android:tint="@color/grey_80"
                            app:srcCompat="@drawable/ic_arrow_down" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/drawer_filter_filter_expand_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:tag="filterContainer"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/drawer_filter_filter_search_subheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:tag="search"
                            android:visibility="gone">

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:hint="@string/search_hint"
                                android:padding="@dimen/spacing_medium" />

                            <ImageButton
                                android:id="@+id/drawer_filter_filter_search"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@color/colorPrimaryDark" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/drawer_filter_filter_worker_subheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{(view) -> drawerFilterClickListener.onFilterContainerClicked(view)}"
                            android:orientation="horizontal"
                            android:tag="worker"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="@dimen/spacing_medium"
                                android:text="@string/worker_label" />

                            <ImageButton
                                android:id="@+id/drawer_filter_filter_worker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@color/colorPrimaryDark" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/drawer_filter_filter_user_subheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{(view) -> drawerFilterClickListener.onFilterContainerClicked(view)}"
                            android:orientation="horizontal"
                            android:tag="user"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="@dimen/spacing_medium"
                                android:text="@string/user_label" />

                            <ImageButton
                                android:id="@+id/drawer_filter_filter_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@color/colorPrimaryDark" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/drawer_filter_filter_category_subheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{(view) -> drawerFilterClickListener.onFilterContainerClicked(view)}"
                            android:orientation="horizontal"
                            android:tag="category"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="@dimen/spacing_medium"
                                android:text="@string/category_label" />

                            <ImageButton
                                android:id="@+id/drawer_filter_filter_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@color/colorPrimaryDark" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/drawer_filter_filter_cyclic_subheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{(view) -> drawerFilterClickListener.onFilterContainerClicked(view)}"
                            android:orientation="horizontal"
                            android:tag="cyclic"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="@dimen/spacing_medium"
                                android:text="@string/cyclic_label" />

                            <ImageButton
                                android:id="@+id/drawer_filter_filter_cyclic_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@color/colorPrimaryDark" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/drawer_filter_filter_localization_subheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{(view) -> drawerFilterClickListener.onFilterContainerClicked(view)}"
                            android:orientation="horizontal"
                            android:tag="localization"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="@dimen/spacing_medium"
                                android:text="@string/localization_label" />

                            <ImageButton
                                android:id="@+id/drawer_filter_filter_localization"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@color/colorPrimaryDark" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/drawer_filter_filter_date_subheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{(view) -> drawerFilterClickListener.onFilterContainerClicked(view)}"
                            android:orientation="horizontal"
                            android:tag="date"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="@dimen/spacing_medium"
                                android:text="@string/date_label" />

                            <ImageButton
                                android:id="@+id/drawer_filter_filter_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@color/colorPrimaryDark" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/drawer_filter_filter_priority_subheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{(view) -> drawerFilterClickListener.onFilterContainerClicked(view)}"
                            android:orientation="horizontal"
                            android:tag="priority"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="@dimen/spacing_medium"
                                android:text="@string/priority_label" />

                            <ImageButton
                                android:id="@+id/drawer_filter_filter_priority"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@color/colorPrimaryDark" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/drawer_filter_filter_completion_subheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{(view) -> drawerFilterClickListener.onFilterContainerClicked(view)}"
                            android:orientation="horizontal"
                            android:tag="completion"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="@dimen/spacing_medium"
                                android:text="@string/state_label" />

                            <ImageButton
                                android:id="@+id/drawer_filter_filter_completion_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@color/colorPrimaryDark" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/drawer_filter_filter_pay_subheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{(view) -> drawerFilterClickListener.onFilterContainerClicked(view)}"
                            android:orientation="horizontal"
                            android:tag="pay"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="@dimen/spacing_medium"
                                android:text="@string/pay_label" />

                            <ImageButton
                                android:id="@+id/drawer_filter_filter_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@color/colorPrimaryDark" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/drawer_filter_filter_rating_subheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{(view) -> drawerFilterClickListener.onFilterContainerClicked(view)}"
                            android:orientation="horizontal"
                            android:tag="rating"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="@dimen/spacing_medium"
                                android:text="@string/rating_label" />

                            <ImageButton
                                android:id="@+id/drawer_filter_filter_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@color/colorPrimaryDark" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/drawer_filter_filter_open_for_work_subheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{(view) -> drawerFilterClickListener.onFilterContainerClicked(view)}"
                            android:orientation="horizontal"
                            android:tag="openForWork"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="@dimen/spacing_medium"
                                android:text="@string/open_for_work_label" />

                            <ImageButton
                                android:id="@+id/drawer_filter_filter_open_for_work"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@color/colorPrimaryDark" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:visibility="visible"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/drawer_filter_toggle_sort_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:gravity="center_vertical"
                        android:minHeight="?attr/actionBarSize"
                        android:onClick="@{(view) -> drawerFilterClickListener.onMainHeaderClicked(view)}"
                        android:orientation="horizontal"
                        android:tag="sort">

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sort_label"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_80" />

                        <ImageButton
                            android:id="@+id/drawer_filter_toggle_sort_button"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="false"
                            android:tag="viewButton"
                            android:tint="@color/grey_80"
                            app:srcCompat="@drawable/ic_arrow_down" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/drawer_filter_sort_expand_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:tag="sortContainer"
                        android:visibility="gone">

                        <RadioGroup
                            android:id="@+id/drawer_filter_sort_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_large">

                            <RadioButton
                                android:id="@+id/drawer_filter_sort_none"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:tag="none"
                                android:text="@string/none_label" />


                            <RadioButton
                                android:id="@+id/drawer_filter_sort_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:tag="pay"
                                android:text="@string/pay_label"
                                android:visibility="gone" />


                            <RadioButton
                                android:id="@+id/drawer_filter_sort_completion_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:tag="task_next_completion_date"
                                android:text="@string/date_label"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/drawer_filter_sort_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:tag="rating"
                                android:text="@string/rating_label"
                                android:visibility="gone" />

                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/spacing_medium">

                            <TextView
                                android:id="@+id/drawer_filter_sort_desc"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:onClick="@{(view) -> drawerFilterClickListener.onOrderSwitched(view)}"
                                android:tag="desc"
                                android:text="@string/descending_label" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/drawer_filter_sort_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:onClick="@{(view) -> drawerFilterClickListener.onOrderSwitchClicked(view)}" />

                            <TextView
                                android:id="@+id/drawer_filter_sort_asc"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:onClick="@{(view) -> drawerFilterClickListener.onOrderSwitched(view)}"
                                android:tag="asc"
                                android:text="@string/ascending_label" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:visibility="visible"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/drawer_filter_toggle_group_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:gravity="center_vertical"
                        android:minHeight="?attr/actionBarSize"
                        android:onClick="@{(view) -> drawerFilterClickListener.onMainHeaderClicked(view)}"
                        android:orientation="horizontal"
                        android:tag="group">

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/group_label"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_80" />

                        <ImageButton
                            android:id="@+id/drawer_filter_toggle_group_button"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="false"
                            android:tag="viewButton"
                            android:tint="@color/grey_80"
                            app:srcCompat="@drawable/ic_arrow_down" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/drawer_filter_group_expand_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:tag="groupContainer"
                        android:visibility="gone">

                        <RadioGroup
                            android:id="@+id/drawer_filter_group_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_large">

                            <RadioButton
                                android:id="@+id/drawer_filter_group_none"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:tag="none"
                                android:text="@string/none_label" />

                            <RadioButton
                                android:id="@+id/drawer_filter_group_priority"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="task_priority_type"
                                android:text="@string/priority_label"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/drawer_filter_group_completion_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="task_next_completion_date"
                                android:text="@string/date_label"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/drawer_filter_group_localization"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="localization"
                                android:text="@string/localization_label"
                                android:visibility="gone" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:visibility="visible"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/drawer_filter_toggle_active_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:gravity="center_vertical"
                        android:minHeight="?attr/actionBarSize"
                        android:onClick="@{(view) -> drawerFilterClickListener.onMainHeaderClicked(view)}"
                        android:orientation="horizontal"
                        android:tag="active">

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/active_filters_label"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_80" />

                        <ImageButton
                            android:id="@+id/drawer_filter_toggle_active_button"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="false"
                            android:tag="viewButton"
                            android:tint="@color/grey_80"
                            app:srcCompat="@drawable/ic_arrow_down" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/drawer_filter_active_expand_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:tag="activeContainer"
                        android:visibility="gone"
                        tools:visibility="visible">


                        <!--todo when there will be active-->

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/drawer_filter_worker_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
