<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="priorityItem"
            type="com.issen.workerfinder.enums.PriorityTypes" />
        <variable
            name="clickListener"
            type="com.issen.workerfinder.ui.misc.OnFilterSelectionListener" />
    </data>

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(view) -> clickListener.onFilterPriorityChanged(priorityItem, view)}"
            android:padding="@dimen/spacing_medium">

            <CheckBox
                android:id="@+id/filter_priority_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:tag="checkbox"
                android:clickable="false"
                app:layout_constraintBottom_toBottomOf="@id/filter_priority_indicator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/filter_priority_indicator" />

            <ImageView
                android:id="@+id/filter_priority_indicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:tint="@color/colorSecondary"
                android:src="@drawable/ic_indicator"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/filter_priority_checkbox"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/filter_priority_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{priorityItem.toString()}"
                android:layout_marginStart="@dimen/spacing_medium"
                app:layout_constraintBottom_toBottomOf="@id/filter_priority_indicator"
                app:layout_constraintStart_toEndOf="@id/filter_priority_indicator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/filter_priority_indicator" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</layout>
