<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="worker"
            type="com.issen.workerfinder.database.models.UserDataFull" />

        <variable
            name="clickListener"
            type="com.issen.workerfinder.ui.misc.ContactListener" />

        <variable
            name="shouldDisplayChatButton"
            type="boolean" />

        <variable
            name="contactChatListener"
            type="com.issen.workerfinder.ui.contactList.ContactChatListener" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_small"
        android:background="@drawable/roundedblock"
        android:onClick="@{() -> clickListener.onContactClicked(worker)}"
        app:cardCornerRadius="@dimen/spacing_x_small"
        app:cardElevation="@dimen/spacing_medium">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/item_contact_list_profile_photo"
                photo="@{worker.userData.photo}"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="@dimen/spacing_medium"
                app:civ_border="false"
                app:civ_shadow="true"
                app:civ_shadow_radius="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_contact_list_name"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:text="@{worker.userData.userName}"
                app:layout_constraintStart_toEndOf="@id/item_contact_list_profile_photo"
                app:layout_constraintEnd_toStartOf="@id/item_contact_chat_button"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_contact_list_open"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:text="@{worker.userData.openForWork == true ? @string/open_for_work : ``}"
                app:layout_constraintStart_toEndOf="@id/item_contact_list_profile_photo"
                app:layout_constraintEnd_toStartOf="@id/item_contact_chat_button"
                app:layout_constraintTop_toBottomOf="@id/item_contact_list_name" />

            <Button
                android:id="@+id/item_contact_chat_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_small"
                android:background="@drawable/roundedblock"
                android:text="@string/select_label"
                android:onClick="@{()->contactChatListener.onContactChatClicked(worker)}"
                android:visibility="@{shouldDisplayChatButton ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>