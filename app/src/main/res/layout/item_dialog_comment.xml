<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="comment"
            type="com.issen.workerfinder.database.models.UserDataWithComments" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_small">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/spacing_medium"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/item_dialog_comment_photo"
                photo="@{comment.userData.photo}"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:civ_border="false"
                app:civ_shadow="true"
                android:layout_margin="@dimen/spacing_x_small"
                app:civ_shadow_radius="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_dialog_comment_name" />

            <TextView
                android:id="@+id/item_dialog_comment_name"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:text="@{comment.userData.userName}"
                app:layout_constraintBottom_toTopOf="@id/item_dialog_comment_rating"
                app:layout_constraintStart_toEndOf="@id/item_dialog_comment_photo"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/item_dialog_comment_rating"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:clickable="false"
                android:rating="@{comment.comment.rating}"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:layout_constraintBottom_toBottomOf="@id/item_dialog_comment_photo"
                app:layout_constraintStart_toEndOf="@id/item_dialog_comment_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:text="@{comment.comment.comment}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_dialog_comment_photo" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>
