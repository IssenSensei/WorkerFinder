<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="user"
            type="com.issen.workerfinder.database.models.UserDataFull" />

        <variable
            name="clickListener"
            type="com.issen.workerfinder.ui.userProfile.UserProfileListener" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.userProfile.UserProfileFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="@dimen/spacing_x_large">

            <TextView
                android:id="@+id/user_profile_name"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text='@{user.userData.userName ?? "Brak danych"}'
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/user_profile_contact_email"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="@dimen/spacing_large"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{() -> clickListener.onEmailClicked(user)}"
                android:scaleType="centerCrop"
                android:tint="@color/colorSecondary"
                app:layout_constraintBottom_toBottomOf="@+id/user_profile_photo"
                app:layout_constraintEnd_toStartOf="@id/user_profile_contact_sms"
                app:layout_constraintTop_toTopOf="@+id/user_profile_photo"
                app:srcCompat="@drawable/ic_email" />

            <ImageButton
                android:id="@+id/user_profile_contact_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_large"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{() -> clickListener.onSmsClicked(user)}"
                android:tint="@color/colorSecondary"
                app:layout_constraintBottom_toBottomOf="@+id/user_profile_photo"
                app:layout_constraintEnd_toStartOf="@id/user_profile_photo"
                app:layout_constraintTop_toTopOf="@+id/user_profile_photo"
                app:srcCompat="@drawable/ic_chat" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/user_profile_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/spacing_large"
                android:onClick="@{() -> clickListener.onProfilePhotoClicked(user)}"
                app:civ_border="true"
                app:civ_border_color="@color/colorSecondary"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_profile_name"
                tools:src="@drawable/meme" />

            <ImageButton
                android:id="@+id/user_profile_contact_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_large"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{() -> clickListener.onCallClicked(user)}"
                android:tint="@color/colorSecondary"
                app:layout_constraintBottom_toBottomOf="@+id/user_profile_photo"
                app:layout_constraintStart_toEndOf="@id/user_profile_photo"
                app:layout_constraintTop_toTopOf="@+id/user_profile_photo"
                app:srcCompat="@drawable/ic_call" />

            <ImageButton
                android:id="@+id/user_profile_contact_chat"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="@dimen/spacing_large"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{() -> clickListener.onChatClicked(user)}"
                android:scaleType="centerCrop"
                android:tint="@color/colorSecondary"
                app:layout_constraintBottom_toBottomOf="@+id/user_profile_photo"
                app:layout_constraintStart_toEndOf="@id/user_profile_contact_call"
                app:layout_constraintTop_toTopOf="@+id/user_profile_photo"
                app:srcCompat="@drawable/ic_logo_small" />

            <LinearLayout
                android:id="@+id/user_profile_users_comments_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:gravity="center"
                android:onClick="@{() -> clickListener.onShowUserCommentsClicked(user)}"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@id/user_profile_workers_comments_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_profile_photo">

                <TextView
                    android:id="@+id/user_profile_users_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="Pracownik" />

                <RatingBar
                    android:id="@+id/user_profile_rating_worker_bar"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:rating="4.8"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:stepSize="0.01" />

                <TextView
                    android:id="@+id/user_profile_rating_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginEnd="16dp"
                    android:text="4.8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/colorSecondary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_profile_workers_comments_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:gravity="center"
                android:onClick="@{() -> clickListener.onShowWorkerCommentsClicked(user)}"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/user_profile_users_comments_container"
                app:layout_constraintTop_toBottomOf="@+id/user_profile_photo">

                <TextView
                    android:id="@+id/user_profile_workers_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="Pracodawca" />

                <RatingBar
                    android:id="@+id/user_profile_rating_user_bar"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:foregroundGravity="center"
                    android:rating="4.8"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:stepSize="0.01" />

                <TextView
                    android:id="@+id/user_profile_rating_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginEnd="16dp"
                    android:text="4.8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/colorSecondary" />

            </LinearLayout>

            <TextView
                android:id="@+id/user_profile_completed_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginEnd="16dp"
                android:text="1.5 K"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorSecondary"
                app:layout_constraintEnd_toStartOf="@id/user_profile_active_tasks"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/user_profile_active_tasks" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="Completed"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_60"
                app:layout_constraintEnd_toEndOf="@id/user_profile_completed_tasks"
                app:layout_constraintStart_toStartOf="@id/user_profile_completed_tasks"
                app:layout_constraintTop_toBottomOf="@id/user_profile_completed_tasks" />

            <TextView
                android:id="@+id/user_profile_active_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_x_large"
                android:text="17.8 K"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorSecondary"
                app:layout_constraintEnd_toStartOf="@id/user_profile_abandoned_tasks"
                app:layout_constraintStart_toEndOf="@id/user_profile_completed_tasks"
                app:layout_constraintTop_toBottomOf="@+id/user_profile_users_comments_container" />

            <TextView
                android:id="@+id/user_profile_active_tasks_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="Active"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_60"
                app:layout_constraintEnd_toEndOf="@id/user_profile_active_tasks"
                app:layout_constraintStart_toStartOf="@id/user_profile_active_tasks"
                app:layout_constraintTop_toBottomOf="@id/user_profile_active_tasks" />

            <TextView
                android:id="@+id/user_profile_abandoned_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="@dimen/spacing_large"
                android:text="1.3 K"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorSecondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/user_profile_active_tasks"
                app:layout_constraintTop_toTopOf="@+id/user_profile_active_tasks" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="Abandoned"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_60"
                app:layout_constraintEnd_toEndOf="@id/user_profile_abandoned_tasks"
                app:layout_constraintStart_toStartOf="@id/user_profile_abandoned_tasks"
                app:layout_constraintTop_toBottomOf="@id/user_profile_abandoned_tasks" />

            <androidx.cardview.widget.CardView
                android:id="@+id/user_profile_user_bio_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_x_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_profile_active_tasks_text">

                <!--todo add "Description" at top center and-->
                <!--show more button on bottom when text is longer, maybe using ^v with animation-->
                <!--https://stackoverflow.com/questions/19099296/set-text-view-ellipsize-and-add-view-more-at-end/19100482-->
                <TextView
                    android:id="@+id/user_profile_user_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_large"
                    android:text='@{user.userData.description ?? "Brak opisu"}'
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_90" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/user_profile_user_categories_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_x_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_profile_user_bio_container">

                <TextView
                    android:id="@+id/user_profile_user_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_large"
                    android:text="No categories yet"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_90" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/user_profile_user_additional_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_x_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_profile_user_categories_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_large"
                            android:text="Email: "
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/grey_90" />

                        <TextView
                            android:id="@+id/user_profile_user_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_large"
                            android:text='@{user.userData.email ?? "Brak danych"}'
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/grey_90" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_large"
                            android:text="Phone: "
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/grey_90" />

                        <TextView
                            android:id="@+id/user_profile_user_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_large"
                            android:text='@{user.userData.phone ?? "Brak danych"}'
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/grey_90" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_large"
                            android:text="Address: "
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/grey_90" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_large"
                            android:text="address"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/grey_90" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_profile_user_additional_info_container">

                <Button
                    android:id="@+id/user_profile_contact_manage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="@{() -> clickListener.onContactManageClicked(user)}"
                    android:text="Nawiąż kontakt/ usuń kontakt" />

                <Button
                    android:id="@+id/user_profile_offer_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="@{user.userData.openForWork ? View.VISIBLE : View.GONE}"
                    android:onClick="@{() -> clickListener.onOfferWork(user)}"
                    android:text="Wystaw zadanie" />

                <Button
                    android:id="@+id/user_profile_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="@{() -> clickListener.onEditProfileClicked(user)}"
                    android:text="Edytuj profil" />

                <Button
                    android:id="@+id/user_profile_public_manage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="@{() -> clickListener.onPublicManageClicked(user)}"
                    android:text="Opublikuj konto" />

                <Button
                    android:id="@+id/user_profile_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="@{() -> clickListener.onDeleteAccountClicked(user)}"
                    android:text="Usuń konto" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</layout>
